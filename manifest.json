{
  "manifest_version": 3,
  "name": "IDMC Mapping Search Tool",
  "version": "1.0.0",
  "description": "Quickly search for nodes, fields, and expressions within the Informatica IDMC mapping.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_popup": "popup/index.html"
  },
  "permissions": [],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; style-src 'self'"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.informaticacloud.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "scripts/page-agent.js",
        "assets/*"        
      ],
      "matches": ["https://*.informaticacloud.com/*"]
    }
  ]
}
